{
  "name": "environmental-monitoring-app",
  "version": "1.0.0",
  "description": "Real-time environmental monitoring system for industrial zones",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/simple-server.js",
    "install-all": "npm install && cd client && npm install && cd ../ml-service && pip install -r requirements.txt"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mqtt": "^4.3.7",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "nodemailer": "^6.9.4",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "environmental-monitoring",
    "iot",
    "real-time",
    "air-quality",
    "water-quality"
  ],
  "author": "Environmental Monitoring Team",
  "license": "MIT"
}
